<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorBlackBg</item>
        <item name="colorPrimaryDark">@color/colorBlackBg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>-->
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>
    <style name="AnimationFade">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/act_enter</item>
        <item name="android:windowExitAnimation">@anim/act_exit</item>
    </style>
    <style name="dialog" parent="android:style/Theme.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@color/colorBlackBg</item>
        <item name="android:textColor">@drawable/viewpager_title_textcolor</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">18sp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>
    <style name="AnimActivityTheme"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:activityOpenEnterAnimation">@anim/act_exit</item>
        <item name="android:activityOpenExitAnimation">@anim/act_exit</item>
    </style>

    <style name="AudioDialog" parent="@android:style/Theme.Dialog"><!--自定义对话框风格-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="jmui_record_voice_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@drawable/round_background</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="login_dialog_style">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="round_check_box_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/round_check_box_bg</item>
        <item name="android:button">@null</item>
    </style>

    <style name="default_check_box_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/default_check_box_style</item>
        <item name="android:button">@null</item>
    </style>

    <style name="default_input_style_with_bg">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">64</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/default_input_bg</item>
    </style>

    <style name="default_input_style">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">64</item>
        <item name="android:background">@drawable/invisible_input_bg</item>
    </style>

    <style name="edit_note_name_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#d0cecf</item>
    </style>

    <style name="jmui_dialog_msg_alert_txt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">#4e4e4e</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="info_left_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="info_right_txt_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/friend_content_text_color</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="jmui_chat_item_sender_avatar_style">
        <item name="android:layout_width">@dimen/item_head_icon_size</item>
        <item name="android:layout_height">@dimen/item_head_icon_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/jmui_head_icon</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="jmui_chat_item_send_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="jmui_chat_text_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#555756</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="jmui_default_dialog_style">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="jmui_drop_down_list_header_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_header_progress_bar_height</item>
    </style>

    <style name="jmui_chat_item_receive_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TimePicker">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#1a1a1a</item>
    </style>

    <style name="jmui_chat_display_name_style">
        <item name="android:ems">5</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">10sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="jmui_msg_text_style">
        <item name="android:maxWidth">225dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/chat_text_color</item>
    </style>
    <style name="jmui_chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="jmui_chat_content_style">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#373334</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="jmui_chat_item_receiver_avatar_style">
        <item name="android:layout_width">@dimen/item_head_icon_size</item>
        <item name="android:layout_height">@dimen/item_head_icon_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@drawable/jmui_head_icon</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>
