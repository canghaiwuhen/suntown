<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
	android:layout_marginTop="5dp"
    >
	<ImageView 
	    android:layout_width="20dp"
	    android:layout_height="20dp"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="5dp"
	    android:src="@drawable/duihua_04"
	    android:id="@+id/icon"	
	    />

	<TextView
	    android:id="@+id/id_recoder_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/id_recoder_lenght"
		android:text="1'"
		android:layout_marginRight="3dp"
		android:textColor="#ff777777" />

	<FrameLayout
	    android:id="@+id/id_recoder_lenght"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:background="@drawable/rc_ic_bubble_left"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/icon"
		android:layout_toEndOf="@+id/icon">
	    <View android:id="@+id/id_recoder_anim"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_gravity="center_vertical|right"
	        android:background="@drawable/adj_right" />
	</FrameLayout>

</RelativeLayout>