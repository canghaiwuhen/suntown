<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_item1"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBgGary"/>
    <RelativeLayout
        android:id="@+id/rl_query"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_query"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_centerVertical="true"
            android:src="@drawable/chaxun"/>
        <TextView
            android:layout_toRightOf="@+id/iv_query"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_20"
            android:text="查询"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBgGary"/>
    <RelativeLayout
        android:id="@+id/rl_witpad"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_witpad_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_centerVertical="true"
            android:src="@drawable/witpad_icon"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_toRightOf="@+id/iv_witpad_icon"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_20"
            android:text="WITPAD"/>
    </RelativeLayout>
</LinearLayout>