<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlackBg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/arrow_l" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="消息"
            android:textSize="@dimen/sp_24" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ap"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBgGary">

        <View
            android:id="@+id/view1"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorYellowIcon" />

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/view1"
            android:src="@drawable/tubiao1" />

        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/iv_icon1"
            android:text="@string/icon1"
            android:textColor="@color/colorYellowIcon"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_message1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name1"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_16"
            android:layout_toRightOf="@+id/iv_icon1"
            />

        <TextView
            android:id="@+id/tv_count1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tv_name1"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp_10"
            android:lines="1"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/red_bg"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlackBg"/>
    <RelativeLayout
        android:id="@+id/rl_change"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBgGary">

        <View
            android:id="@+id/view2"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorViolet" />

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/view2"
            android:src="@drawable/tubiao2" />

        <TextView
            android:id="@+id/tv_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/iv_icon2"
            android:text="@string/icon2"
            android:textColor="@color/colorViolet"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_count2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tv_name2"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp_10"
            android:lines="1"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/red_bg"/>

        <TextView
            android:id="@+id/tv_message2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tv_name2"
            android:layout_alignStart="@+id/tv_name2" />
    </RelativeLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorBlackBg"/>
    <RelativeLayout
        android:id="@+id/rl_battery"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBgGary">

        <View
            android:id="@+id/view3"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/iconRed" />

        <ImageView
            android:id="@+id/iv_icon3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/view3"
            android:src="@drawable/tubiao4" />

        <TextView
            android:id="@+id/tv_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/iv_icon3"
            android:text="@string/icon4"
            android:textColor="@color/iconRed"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_count3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tv_name3"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp_10"
            android:lines="1"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/red_bg"/>

        <TextView
            android:id="@+id/tv_message3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:maxLines="1"
            android:textSize="@dimen/sp_16"
            android:ellipsize="end"
            android:layout_below="@+id/tv_name3"
            android:layout_alignStart="@+id/tv_name3" />
    </RelativeLayout>
 <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorBlackBg"/>

    <RelativeLayout
        android:id="@+id/rl_register"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBgGary">

        <View
            android:id="@+id/view4"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorGreen" />

        <ImageView
            android:id="@+id/iv_icon4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/view4"
            android:src="@drawable/tubiao3" />

        <TextView
            android:id="@+id/tv_name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/iv_icon4"
            android:text="@string/icon3"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_time4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_count4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tv_name4"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp_10"
            android:lines="1"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/red_bg"/>

        <TextView
            android:id="@+id/tv_message4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:maxLines="1"
            android:textSize="@dimen/sp_16"
            android:ellipsize="end"
            android:layout_below="@+id/tv_name4"
            android:layout_alignStart="@+id/tv_name4" />
    </RelativeLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorBlackBg"/>
    <RelativeLayout
        android:id="@+id/rl_other"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorBgGary">

        <View
            android:id="@+id/view5"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorGary" />

        <ImageView
            android:id="@+id/iv_icon5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/view5"
            android:src="@drawable/tubiao5" />

        <TextView
            android:id="@+id/tv_name5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/iv_icon5"
            android:text="其他"
            android:textColor="@color/colorGary"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_time5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_count5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tv_name5"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp_10"
            android:lines="1"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/red_bg"/>

        <TextView
            android:id="@+id/tv_message5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:maxLines="1"
            android:textSize="@dimen/sp_16"
            android:ellipsize="end"
            android:layout_below="@+id/tv_name5"
            android:layout_alignStart="@+id/tv_name5" />
    </RelativeLayout>

</LinearLayout>
