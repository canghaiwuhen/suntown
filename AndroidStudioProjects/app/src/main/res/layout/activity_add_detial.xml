<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorSkyBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="15dp"
            android:textSize="@dimen/textSizeX"
            android:textColor="@color/colorWhite"
            android:text="详细资料"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:padding="@dimen/paddingM"
            android:layout_centerVertical="true"
            android:src="@drawable/back_01"
            android:background="@drawable/back_blue_selector"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorBgLine"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.suntown.widget.RoundAngleImageView
            android:id="@+id/iv_header"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/user"
            android:layout_margin="@dimen/dp10"
            app:roundWidth="10dp"
            app:roundHeight="10dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeL"
            android:layout_toRightOf="@+id/iv_header"
            android:layout_marginLeft="@dimen/padding"
            android:textColor="@color/colorBlack"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorBgLine"/>
    <RelativeLayout
        android:id="@+id/rl_beizhu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding">
        <TextView
            style="@style/TextViewItem"
            android:textColor="@color/colorGarySmall"
            android:layout_marginLeft="@dimen/padding"
            android:text="设置备注"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginLeft="@dimen/padding"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorBgLine"
        android:layout_alignParentBottom="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding"
        android:orientation="horizontal">

        <TextView
            android:textSize="@dimen/sp20"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGarySmall"
            android:layout_marginLeft="@dimen/padding"
            android:layout_gravity="center"
            android:text="性别"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/tv_sax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp20"
            android:layout_marginLeft="@dimen/item_padding"
            android:text="男"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        android:layout_marginLeft="@dimen/padding"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding"
        android:orientation="horizontal">
        <TextView
            android:textSize="@dimen/sp20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGarySmall"
            android:layout_marginLeft="@dimen/padding"
            android:layout_gravity="center"
            android:text="手机号码"/>
        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp20"
            android:layout_marginLeft="@dimen/item_padding"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        android:layout_marginLeft="@dimen/padding"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp40"
        android:layout_margin="@dimen/dp40">
        <Button
            android:id="@+id/btn_agree"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dp10"
            android:text="接受"
            android:background="@drawable/blue_confirm_selector"/>
        <Button
            android:id="@+id/btn_refuse"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/dp10"
            android:text="拒绝"
            android:background="@drawable/red_confirm_selector"/>
    </LinearLayout>
</LinearLayout>
