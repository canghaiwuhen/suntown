<?xml version="1.0" encoding="utf-8"?>
<com.suntown.widget.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/swipeLayout">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_swipe_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="配置服务"
            android:textColor="#fff"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#ff9c00"/>
        <TextView
            android:id="@+id/tv_swipe_bind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="绑定商品"
            android:textColor="#fff"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#9e9e9e"/>
        <TextView
            android:id="@+id/tv_swipe_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="删除"
            android:textColor="#fff"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#f00"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_main">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/paddingM"
                    android:layout_marginLeft="@dimen/paddingM"
                    android:layout_marginRight="@dimen/paddingM"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorGary"
                        android:textSize="@dimen/textSizeL"
                        android:text="标签IP:"/>
                    <TextView
                        android:id="@+id/tv_tag_num"
                        android:layout_marginLeft="@dimen/paddingM"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/textSizeL"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/paddingM"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorGary"
                        android:textSize="@dimen/textSizeL"
                        android:text="绑定商品:"/>
                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_marginLeft="@dimen/paddingM"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSizeL"
                        android:lines="1"
                        android:ellipsize="end"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

</com.suntown.widget.SwipeLayout>