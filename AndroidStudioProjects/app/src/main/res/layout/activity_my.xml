<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fitsSystemWindows="true"
        android:background="@color/colorSkyBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="15dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSizeX"
            android:text="我的"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:padding="@dimen/paddingM"
            android:layout_centerVertical="true"
            android:src="@drawable/back_01"
            android:background="@drawable/back_blue_selector"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBgLine"
        android:layout_height="15dp"
        android:id="@+id/view2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        android:layout_marginLeft="@dimen/padding"
        android:layout_alignBottom="@+id/iv_header" />

    <RelativeLayout
        android:id="@+id/rl_choose_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeL"
            android:layout_marginLeft="@dimen/padding"
            android:textColor="@color/colorGary95"
            android:text="头像"/>
        <com.suntown.widget.CircleImageView
            android:id="@+id/iv_header"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/user"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_choose_nick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding">
        <TextView
            style="@style/TextViewItem"
            android:textColor="@color/colorGary95"
            android:layout_marginLeft="@dimen/padding"
            android:text="昵称"/>
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
        <TextView
            style="@style/TextViewItem"
            android:id="@+id/tv_nick_name"
            android:textColor="@color/colorBlack"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:text="nick"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginLeft="@dimen/padding"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            style="@style/TextViewItem"
            android:textColor="@color/colorGary95"
            android:layout_margin="@dimen/padding"
            android:text="手机号码"/>
        <TextView
            android:id="@+id/tv_number"
            style="@style/TextViewItem"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack"
            android:layout_marginRight="15dp"
            android:text=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginLeft="@dimen/padding"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_choose_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginLeft="@dimen/padding"
            android:layout_alignParentBottom="true"
            android:id="@+id/view" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/TextViewItem"
            android:textColor="@color/colorGary95"
            android:text="我的收货地址"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_zxing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding">
        <TextView
            style="@style/TextViewItem"
            android:textColor="@color/colorGary95"
            android:layout_marginLeft="@dimen/padding"
            android:text="我的二维码"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginLeft="@dimen/padding"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorBgLine"
        android:layout_alignParentBottom="true" />
    <RelativeLayout
        android:id="@+id/rl_choose_sax"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding">
        <TextView
            style="@style/TextViewItem"
            android:textColor="@color/colorGary95"
            android:layout_marginLeft="@dimen/padding"
            android:text="性别"/>
        <ImageView
            android:id="@+id/iv_arrow_sax"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
        <TextView
            android:id="@+id/tv_sax"
            style="@style/TextViewItem"
            android:textColor="@color/colorBlack"
            android:layout_toLeftOf="@+id/iv_arrow_sax"
            android:text="男"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginLeft="@dimen/padding"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_choose_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding">
        <TextView
            style="@style/TextViewItem"
            android:textColor="@color/colorGary95"
            android:layout_marginLeft="@dimen/padding"
            android:text="修改密码"/>
        <ImageView
            android:id="@+id/iv_arrow_psw"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
        <TextView
            android:id="@+id/tv_psw"
            style="@style/TextViewItem"
            android:textColor="@color/colorBlack"
            android:layout_toLeftOf="@+id/iv_arrow_psw"
            android:text=""/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginLeft="@dimen/padding"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_enter_contacts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding">
        <TextView
            android:id="@+id/tv_contacts"
            style="@style/TextViewItem"
            android:textColor="@color/colorGary95"
            android:layout_marginLeft="@dimen/padding"
            android:text="通讯录"/>
        <TextView
            android:id="@+id/tv_fm_num"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/sp_common_circle2yellow"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_toLeftOf="@+id/iv"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginLeft="@dimen/padding"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>
