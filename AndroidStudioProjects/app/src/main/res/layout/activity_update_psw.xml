<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorSkyBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:padding="15dp"
            android:textSize="@dimen/textSizeX"
            android:text="密码修改"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/textSize"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/paddingM"
            android:layout_centerVertical="true"
            android:background="@drawable/back_blue_selector"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#F2F3F8"
        android:layout_margin="@dimen/dp10"
        android:layout_height="@dimen/dp40">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding"
            android:src="@drawable/psw_old"/>

        <EditText
            android:id="@+id/et_old_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="  请输入密码"
            android:background="@null"/>

        <ImageView
            android:id="@+id/iv_clear_psw"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/rong"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp10"
        android:layout_marginTop="@dimen/dp20"
        android:background="#F2F3F8"
        android:layout_height="@dimen/dp40">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding"
            android:src="@drawable/psw_new"/>
        <EditText
            android:id="@+id/et_new_psw"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="match_parent"
            android:hint=" 请输入您的新密码"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp40"
        android:layout_margin="@dimen/dp10"
        android:background="#F2F3F8"
        android:layout_marginTop="@dimen/dp20">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding"
            android:src="@drawable/psw_new"/>
        <EditText
            android:id="@+id/et_confirm_psw"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="match_parent"
            android:hint=" 请确认您的新密码"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginBottom="@dimen/dp20"
        android:textColor="@color/colorWhite"
        android:text="确认修改"
        android:background="@drawable/blue_confirm_selector"/>
</LinearLayout>
