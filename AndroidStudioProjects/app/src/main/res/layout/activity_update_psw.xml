<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.suntown.activity.UpdatePswActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBlack"
            android:padding="15dp"
            android:textSize="@dimen/textSize"
            android:text="密码修改"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/textSize"
            android:layout_marginLeft="@dimen/padding"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/textSize"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding"
            android:layout_centerVertical="true" />
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGary"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/item_padding">
        <TextView
            style="@style/TextViewItem"
            android:textColor="@color/colorGary"
            android:layout_marginLeft="@dimen/padding"
            android:text="原  密  码："/>
        <EditText
            android:id="@+id/et_old_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            android:background="@null"/>

        <ImageView
            android:id="@+id/iv_clear_psw"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/rong"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGary"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/item_padding">
        <TextView
            style="@style/TextViewItem"
            android:textColor="@color/colorGary"
            android:layout_marginLeft="@dimen/padding"
            android:text="新  密  码："/>
        <EditText
            android:id="@+id/et_new_psw"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="match_parent"
            android:hint="请输入您的新密码"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGary"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/item_padding">
        <TextView
            style="@style/TextViewItem"
            android:textColor="@color/colorGary"
            android:layout_marginLeft="@dimen/padding"
            android:text="确认密码："/>
        <EditText
            android:id="@+id/et_confirm_psw"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="match_parent"
            android:hint="请确认您的新密码"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGary"
        android:layout_height="1dp"/>

</LinearLayout>
