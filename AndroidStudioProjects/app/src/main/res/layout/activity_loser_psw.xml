<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bj"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:textSize="@dimen/textSizeX"
                android:textColor="@color/colorWhite"
                android:text="慧屏下单"/>
        </RelativeLayout>
        <!--<RelativeLayout-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_marginTop="@dimen/paddingM"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:gravity="center"-->
        <!--android:background="@drawable/header_out">-->
        <!--<TextView-->
        <!--android:id="@+id/tv_upload_photo"-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="90dp"-->
        <!--android:textColor="@color/colorBlack"-->
        <!--android:background="@drawable/header_in"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:alpha="100"-->
        <!--android:text="上传\n图片"-->
        <!--android:textSize="@dimen/paddingL"-->
        <!--android:gravity="center" />-->
        <!--</RelativeLayout>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/paddingM"
                android:padding="@dimen/paddingS"
                android:textColorHint="@color/colorWhite"
                android:background="@drawable/white_edge"
                android:gravity="center"
                android:hint=" 输入手机号"
                android:inputType="number"
                android:textSize="@dimen/textSizeX"
                android:layout_centerInParent="true" />
            <Button
                android:id="@+id/btn_send_security_code"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:visibility="gone"
                android:textColor="@color/coloDrakrRed"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/paddingL"
                android:background="@drawable/translucence"
                android:textSize="@dimen/paddingM"
                android:text="发送验证码"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/et_security_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/paddingM"
            android:padding="@dimen/paddingS"
            android:textColorHint="@color/colorWhite"
            android:background="@drawable/white_edge"
            android:gravity="center"
            android:hint=" 输入验证码"
            android:textSize="@dimen/textSizeX"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorWhite"
            android:text="找回密码"
            android:textSize="@dimen/textSizeX"
            android:layout_marginLeft="@dimen/paddingM"
            android:layout_marginRight="@dimen/paddingM"
            android:background="@drawable/login_selsetor"/>
    </LinearLayout>
</ScrollView>