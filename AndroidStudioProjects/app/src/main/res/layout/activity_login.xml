<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bj"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSizeXXL"
        android:layout_gravity="center_horizontal"
        android:padding="80dp"
        android:text="慧屏下单"/>

        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/paddingM"
            android:padding="@dimen/paddingS"
            android:maxLength="11"
            android:textColorHint="@color/colorWhite"
            android:background="@drawable/white_edge"
            android:gravity="center"
            android:inputType="number"
            android:hint=" 输入手机号"
            android:textSize="@dimen/textSizeX"
            android:layout_centerInParent="true" />

    <EditText
        android:id="@+id/et_login_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/paddingM"
        android:padding="@dimen/paddingS"
        android:layout_marginRight="@dimen/paddingM"
        android:layout_marginLeft="@dimen/paddingM"
        android:textColorHint="@color/colorWhite"
        android:background="@drawable/white_edge"
        android:gravity="center"
        android:hint=" 输入密码"
        android:inputType="textPassword"
        android:textSize="@dimen/textSizeX"
        android:layout_centerInParent="true" />
    <Button
        android:onClick="confirm_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorWhite"
        android:text="登录"
        android:textSize="@dimen/textSizeX"
        android:layout_marginLeft="@dimen/paddingM"
        android:layout_marginRight="@dimen/paddingM"
        android:background="@drawable/login_selsetor"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">


       <TextView
           android:id="@+id/tv_loser_psw"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:textColor="@color/colorWhite"
           android:text="忘记密码"
           android:textSize="@dimen/textSize"
           android:padding="20dp"/>
       <TextView
           android:id="@+id/tv_register"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/colorWhite"
           android:text="注册"
           android:textSize="@dimen/textSize"
           android:padding="20dp"/>
   </LinearLayout>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp16"
        android:textColor="@color/colorWhite"
        android:layout_margin="@dimen/dp10"
        android:layout_gravity="bottom|center"/>
</LinearLayout>