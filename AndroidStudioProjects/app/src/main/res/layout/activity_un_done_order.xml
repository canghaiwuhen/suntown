<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.WaitPayOrderDetialActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorSkyBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="15dp"
            android:textSize="@dimen/textSizeX"
            android:textColor="@color/colorWhite"
            android:text="订单详情"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:padding="@dimen/paddingM"
            android:layout_centerVertical="true"
            android:src="@drawable/back_01"
            android:background="@drawable/back_blue_selector"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bj_07">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人:"
                    android:textSize="@dimen/sp16"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp16"
                    android:text="未选择"/>
                <TextView
                    android:id="@+id/tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/didian_03"
                    android:layout_marginLeft="@dimen/dp10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:textSize="@dimen/textSize"
                    android:text="收货地址:"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize"
                    android:layout_marginLeft="5dp"
                    android:text="未选择"/>
            </LinearLayout>
        </LinearLayout>
        <!--<ImageView-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:padding="10dp"-->
        <!--android:src="@drawable/arrow"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true"/>-->
    </LinearLayout>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="5dp"-->
    <!--android:background="@drawable/bg_view"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/bg_3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5">
            <TextView
                android:id="@+id/tv_tag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:layout_margin="@dimen/dp10"
                android:text="0.0.0.7"
                android:textColor="@color/colorGary"/>
            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:textColor="@color/colorGary"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp10"
                android:text="1541321"/>
        </RelativeLayout>
        <include layout="@layout/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_goods_photo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="@color/colorGary"
                android:text="润之家儿童鸡蛋面"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRedText"
                    android:text="￥3.9"/>
                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/padding"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp16"
                    android:padding="3dp"
                    android:text="×1"/>
            </RelativeLayout>
        </LinearLayout>
        <include layout="@layout/line"/>
        <RelativeLayout
            android:id="@+id/rl_choose_sax"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10">
            <TextView
                style="@style/TextViewItem"
                android:textSize="@dimen/sp16"
                android:layout_marginLeft="@dimen/padding"
                android:text="购买数量"/>

            <TextView
                android:id="@+id/tv_num"
                style="@style/TextViewItem"
                android:layout_width="30dp"
                android:textSize="@dimen/sp16"
                android:textColor="@color/colorBlack"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/iv_add"
                android:text="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                android:layout_marginLeft="@dimen/padding"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10">
            <TextView
                android:id="@+id/tv_all_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp18"
                android:textColor="@color/colorRedText"
                android:text="￥3.9"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp10" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:"
                android:layout_marginRight="@dimen/dp10"
                android:textSize="@dimen/sp18"
                android:layout_toLeftOf="@+id/tv_all_price"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_choose_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_padding">
        <TextView
            style="@style/TextViewItem"
            android:textSize="@dimen/sp16"
            android:layout_marginLeft="@dimen/padding"
            android:text="支付状态"
            android:id="@+id/textView10" />
        <TextView
            style="@style/TextViewItem"
            android:textSize="@dimen/sp16"
            android:text="已支付"
            android:padding="10dp"
            android:textColor="@color/colorSkyBlue"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toLeftOf="@+id/iv_arrow"
            android:layout_toStartOf="@+id/iv_arrow"
            android:id="@+id/textView11" />
    </RelativeLayout>
</LinearLayout>
