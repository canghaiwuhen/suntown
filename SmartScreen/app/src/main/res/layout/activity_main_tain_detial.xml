<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorBlackBg">
    <include layout="@layout/title_item"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/ll_normal"
            layout="@layout/normal_item"
            android:visibility="gone"/>
        <ScrollView
            android:id="@+id/sl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_height="140dp"
                    android:background="@drawable/nophoto"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/sp_20"
                    android:layout_margin="@dimen/dp_10"
                    android:text="模板详情"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="模板名称:"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="临保模板"
                        android:textSize="@dimen/sp_18"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_18"
                        android:layout_margin="@dimen/dp_10"
                        android:text="模板类型:"/>
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="临保模板"
                        android:textSize="@dimen/sp_18"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_18"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="模板尺寸:"/>
                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="临保模板"
                        android:textSize="@dimen/sp_18"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_18"
                        android:layout_margin="@dimen/dp_10"
                        android:text="旋转角度:"/>
                    <TextView
                        android:id="@+id/tv_angle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text=""
                        android:textSize="@dimen/sp_18"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/sp_20"
                    android:layout_margin="@dimen/dp_10"
                    android:text="已分配的门店"/>
                <com.suntown.smartscreen.weight.NestedListView
                    android:id="@+id/nlv_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
