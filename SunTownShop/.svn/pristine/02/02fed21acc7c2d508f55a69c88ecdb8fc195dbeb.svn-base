<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><layer-list>

            <!-- This is the line -->
            <item><shape>
                    <solid android:color="#ffc1c1c1" />
                    <corners android:bottomRightRadius="6dip" />
                </shape></item>
            <!-- This is the main color -->
            <item android:left="0.5dp"><shape android:shape="rectangle">
                    <solid android:color="@color/white" />

                    <corners android:bottomRightRadius="6dip" />
                </shape></item>
        </layer-list></item>
    <item android:state_pressed="true"><layer-list>

            <!-- This is the line -->
            <item><shape>
                    <solid android:color="#ffc1c1c1" />
                    <corners android:bottomRightRadius="6dip" />
                </shape></item>
            <!-- This is the main color -->
            <item android:left="0.5dp"><shape android:shape="rectangle">
                    <solid android:color="@color/bg_color" />

                    <corners android:bottomRightRadius="6dip" />
                </shape></item>
        </layer-list></item>

</selector>