<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/framestyle_confirmdialog"
    android:gravity="center"
    android:paddingTop="6dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/style_line_bottom"
        android:gravity="center"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请设置您的位置"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/location_gate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/style_line_bottom"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <RadioButton
            android:id="@+id/rb_gate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:button="@drawable/selector_checkbox"
            android:paddingLeft="10dp"
            android:text="超市1号入口"
            android:checked="true"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/location_scan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/style_line_bottom"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <RadioButton
            android:id="@+id/rb_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:button="@drawable/selector_checkbox"
            android:paddingLeft="10dp"
            android:text="扫码获得位置"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/view_cancel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_ok"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_leftline"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="@color/orange"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>