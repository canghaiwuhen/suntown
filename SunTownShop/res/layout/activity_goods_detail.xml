<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/goods_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="60dp" >

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:onClick="close" >

            <ImageView
                android:id="@+id/iv_goods_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/toolbar_back_btn_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/goods_detail_title_text"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:onClick="goCart" >

            <ImageView
                android:id="@+id/iv_goods_detail_addin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shoppingcart_bg"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/cart_addin" />

            <TextView
                android:id="@+id/tv_cartnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/iv_goods_detail_addin"
                android:layout_alignTop="@+id/iv_goods_detail_addin"
                android:background="@drawable/goodsdetail_cartnumber_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" >

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/footer"
                android:layout_alignParentTop="true"
                android:background="@color/bg_color"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/white" >

                            <ImageView
                                android:id="@+id/iv_goods_detail_main"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/picture_holder_200x200" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:minHeight="45dp" >

                                <TextView
                                    android:id="@+id/tv_discount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/icon_discount_bg"
                                    android:text="2.5折"
                                    android:textColor="@color/white"
                                    android:textSize="12.0sp" />

                                <TextView
                                    android:id="@+id/tv_goods_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toLeftOf="@+id/iv_goods_detail_storeup"
                                    android:maxLines="2"
                                    android:text="@string/goods_name_text"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tv_goods_curprice_ms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/tv_goods_curprice"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="15dp"
                                    android:text="￥"
                                    android:textColor="@color/goods_price_color"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_goods_curprice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_goods_name"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@+id/tv_goods_curprice_ms"
                                    android:text="价格"
                                    android:textColor="@color/goods_price_color"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tv_goods_oriprice_ms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/tv_goods_curprice"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/tv_goods_curprice"
                                    android:text="￥"
                                    android:textColor="@color/greyfont"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_goods_oriprice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/tv_goods_curprice"
                                    android:layout_toRightOf="@+id/tv_goods_oriprice_ms"
                                    android:text="原价"
                                    android:textColor="@color/greyfont"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:id="@+id/iv_goods_detail_storeup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="15dp"
                                    android:src="@drawable/collect_negative" />
                            </RelativeLayout>

                            <Button
                                android:id="@+id/btn_goods_detail_addtoprepare"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@color/button_bg_yellow"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="加入预购清单"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp" >

                                    <TextView
                                        android:id="@+id/tv_goods_buyquantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="15dp"
                                        android:text="@string/goods_buyquantity_text"
                                        android:textColor="@color/detail_color" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp" >

                                    <TextView
                                        android:id="@+id/goods_detail_curprice_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/goods_curprice_text"
                                        android:textColor="@color/detail_color"
                                        android:textSize="14dp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp" >
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/bg_color"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/title_ico" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/imageView4"
                            android:text="@string/goods_detail_info_text"
                            android:textColor="@color/black"
                            android:textSize="17dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/view_adv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/white"
                        android:gravity="left|top"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_adv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_adv_corner" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="全场满100减10，满150减20"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/white"
                        android:onClick="showEva"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_evaluate_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="商品评价(0条)"
                            android:textColor="@color/greyfont"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/arrow" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/view_evaluate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/style_line_top_black"
                        android:maxHeight="120dp"
                        android:padding="5dp"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/avatar" />

                        <TextView
                            android:id="@+id/tv_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignTop="@+id/iv_avatar"
                            android:layout_marginLeft="5.0dip"
                            android:layout_toRightOf="@+id/iv_avatar"
                            android:text="昵称"
                            android:textColor="@color/black"
                            android:textSize="16.0sp" />

                        <RatingBar
                            android:id="@+id/rb_evarate"
                            style="@style/roomRatingBarNoEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/iv_avatar"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:stepSize="1" />

                        <TextView
                            android:id="@+id/tv_evatext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv_nickname"
                            android:layout_below="@+id/tv_nickname"
                            android:layout_marginRight="5.0dip"
                            android:gravity="left|top"
                            android:text="评语"
                            android:textColor="@color/black"
                            android:textSize="16.0sp" />

                        <TextView
                            android:id="@+id/tv_evadate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_evatext"
                            android:layout_marginRight="5dp"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:text="评价时间"
                            android:textColor="@color/greyfont"
                            android:textSize="12.0sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/view_goods_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <RadioGroup
                            android:id="@+id/rg_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/rb_detail"
                                style="@style/radioButton"
                                android:checked="true"
                                android:paddingBottom="5dp"
                                android:text="图文详情"
                                android:textSize="17sp" />

                            <RadioButton
                                android:id="@+id/rb_param"
                                style="@style/radioButton"
                                android:paddingBottom="5dp"
                                android:text="商品参数"
                                android:textSize="17sp" />

                            <RadioButton
                                android:id="@+id/rb_recommend"
                                style="@style/radioButton"
                                android:paddingBottom="5dp"
                                android:text="猜你喜欢"
                                android:textSize="17sp" />
                        </RadioGroup>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <!-- 图文详情 -->

                        <WebView
                            android:id="@+id/wv_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <!-- 商品参数 -->

                        <LinearLayout
                            android:id="@+id/view_goods_detail_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <TableRow
                                    android:id="@+id/tr_goods_detail_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp" >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:text="@string/goods_unit_text"
                                            android:textColor="@color/detail_color"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:id="@+id/tv_goods_info_unit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/goods_unit_text"
                                            android:textColor="@color/detail_color"
                                            android:textSize="14dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/goods_brand_text"
                                            android:textColor="@color/detail_color"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:id="@+id/tv_goods_info_brand"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/goods_brand_text"
                                            android:textColor="@color/detail_color"
                                            android:textSize="14dp" />
                                    </LinearLayout>
                                </TableRow>

                                <TableRow
                                    android:id="@+id/tr_goods_detail_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="5dp" >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:text="@string/goods_origin_text"
                                            android:textColor="@color/detail_color"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:id="@+id/tv_goods_info_origin"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/goods_origin_text"
                                            android:textColor="@color/detail_color"
                                            android:textSize="14dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:id="@+id/tv_goods_detail_spec_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/goods_spec_text"
                                            android:textColor="@color/detail_color"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:id="@+id/tv_goods_spec"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/goods_spec_text"
                                            android:textColor="@color/black"
                                            android:textSize="14dp" />
                                    </LinearLayout>
                                </TableRow>
                            </TableLayout>
                        </LinearLayout>
                        <!-- 猜你喜欢 -->

                        <LinearLayout
                            android:id="@+id/view_goods_detail_recomd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/bg_color"
                                android:visibility="gone" >

                                <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/title_ico" />

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="2dp"
                                    android:layout_toRightOf="@+id/imageView5"
                                    android:text="@string/goods_recomd_text"
                                    android:textColor="@color/black"
                                    android:textSize="17dp" />
                            </RelativeLayout>

                            <GridView
                                android:id="@+id/gv_goodslist"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@color/bg_color"
                                android:horizontalSpacing="2dp"
                                android:numColumns="3"
                                android:verticalSpacing="2dp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:onClick="showEva"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/title_ico" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/imageView6"
                            android:text="@string/goods_apris_text"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/tv_noeva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/textView7"
                            android:text="@string/goods_apris_none_text"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <RatingBar
                            style="@style/roomRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/textView7"
                            android:gravity="center"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:stepSize="0.5" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/view_goods_detail_apris"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="15dp" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/tv_goods_detail_apris"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="@string/goods_apris_lv"
                                    android:textColor="@color/detail_color"
                                    android:textSize="14dp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/star_hover" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/star_hover" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/star_hover" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/star_hover" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/star_hover" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/goods_apris_user"
                                    android:textColor="@color/detail_color"
                                    android:textSize="14dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="@string/goods_apris_userwho"
                                    android:textColor="@color/detail_color"
                                    android:textSize="14dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="@string/goods_apris_date"
                                    android:textColor="@color/detail_color"
                                    android:textSize="14dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/iv_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:onClick="navigate"
                android:padding="10dp"
                android:src="@drawable/icon_goods_route" />

            <RelativeLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/style_line_top_orange"
                android:gravity="center_vertical"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btn_goods_detail_sub"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/selector_btn_sub" />

                <EditText
                    android:id="@+id/et_goods_detail_quantity"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/btn_goods_detail_sub"
                    android:background="@drawable/tb_cart_control_flow_number_center"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="1" >
                </EditText>

                <Button
                    android:id="@+id/btn_goods_detail_add"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/et_goods_detail_quantity"
                    android:background="@drawable/selector_btn_add" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/btn_goods_detail_add"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <Button
                        android:id="@+id/btn_goods_detail_addtocart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/header_bg"
                        android:text="加入购物车"
                        android:textColor="@color/white" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <include
            android:id="@+id/loading"
            layout="@layout/loading_layout"
            android:visibility="gone" />

        <include
            android:id="@+id/error"
            layout="@layout/error_layout"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>